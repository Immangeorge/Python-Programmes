e=6
c=1
while c<=6:
           d=1
           while d<=e:
                      print('*',end='')
                      d=d+1
           print()
           c=c+1
           e=e-1
e=1
c=1
while c<=6:
            g=1
            while g<=e:
                       print('*',end='')
                       g=g+1
            print()
            c=c+1
            e=e+1
